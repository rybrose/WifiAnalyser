<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvWiFiLocationMapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="WiFiLocationMapper"
        android:textAlignment="center"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btnWifiScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start WiFi Scan"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginRight="5sp"
        android:layout_alignLeft="@+id/tvWiFiLocationMapper"
        />

    <Button
        android:id="@+id/btnLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Location"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_alignRight="@+id/tvWiFiLocationMapper"
        />

</RelativeLayout>